<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="10dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_owner_user_image_my_implementations"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                tools:src="@drawable/ic_profile_image_place_holder" />

            <TextView
                android:id="@+id/tv_owner_name_my_implementations"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:textColor="@color/secondaryDarkColor"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:text="Kyan Sleyster" />

            <ImageView
                android:id="@+id/iv_edit_idea_my_implementations"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/edit_icon"
                android:src="@drawable/ic_edit_24dp"
                app:tint="@android:color/holo_orange_light" />

            <ImageView
                android:id="@+id/iv_delete_my_implementations"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/delete_icon"
                android:src="@drawable/ic_delete_24dp" />

            <ImageView
                android:id="@+id/iv_github_my_implementations"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:contentDescription="@string/github_icon"
                android:src="@drawable/ic_github"
                app:tint="@color/primaryDarkColor2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="16dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_upvote_my_implementations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/upvote_icon"
                    android:src="@drawable/ic_upvote_outline_24dp"
                    app:tint="@color/primaryDarkColor2" />

                <TextView
                    android:id="@+id/tv_upvote_downvote_my_implementations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:textColor="@color/secondaryDarkColor"
                    android:textSize="24sp"
                    tools:text="45" />

                <ImageView
                    android:id="@+id/iv_downvote_my_implementations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/downvote_icon"
                    android:src="@drawable/ic_downvote_outline_24dp"
                    app:tint="@color/primaryDarkColor2" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title_my_implementations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:textColor="@color/primaryDarkColor"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:text="Title" />

                <TextView
                    android:id="@+id/tv_description_my_implementations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    tools:text="@string/sample_text" />

            </LinearLayout>
        </LinearLayout>

        <com.kofigyan.stateprogressbar.StateProgressBar
            android:id="@+id/state_progress_bar_my_implementations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:spb_animateToCurrentProgressState="true"
            app:spb_checkStateCompleted="true"
            app:spb_currentStateNumber="3"
            app:spb_maxStateNumber="10"
            app:spb_stateBackgroundColor="@color/secondaryLightColor2"
            app:spb_stateForegroundColor="@color/secondaryDarkColor2"
            app:spb_stateNumberBackgroundColor="@color/secondaryTextColor"
            app:spb_stateNumberForegroundColor="@color/secondaryTextColor" />

    </LinearLayout>
</androidx.cardview.widget.CardView>