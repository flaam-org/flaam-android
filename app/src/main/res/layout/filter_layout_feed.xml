<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/sort_by"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/cgFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="16dp"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipVotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="@string/votes"
            app:checkedIcon="@drawable/ic_check_circle"
            app:checkedIconTint="@color/secondaryColor"
            app:chipBackgroundColor="@color/filter_chip_bg_color_selector" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipUpVotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="@string/upvote_count"
            app:checkedIcon="@drawable/ic_check_circle"
            app:checkedIconTint="@color/secondaryColor"
            app:chipBackgroundColor="@color/filter_chip_bg_color_selector"

            />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipLatest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:checkable="true"
            android:text="@string/latest"
            app:checkedIcon="@drawable/ic_check_circle"
            app:checkedIconTint="@color/secondaryColor"
            app:chipBackgroundColor="@color/filter_chip_bg_color_selector" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipImpl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:text="@string/implementations"
            app:checkedIcon="@drawable/ic_check_circle"
            app:checkedIconTint="@color/secondaryColor"
            app:chipBackgroundColor="@color/filter_chip_bg_color_selector" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:checked="true"
            android:text="@string/all"
            app:checkedIcon="@drawable/ic_check_circle"
            app:checkedIconTint="@color/secondaryColor"
            app:chipBackgroundColor="@color/filter_chip_bg_color_selector" />
    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/tags"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/cg_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="16dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_edit2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:cursorVisible="true"
            android:focusable="true"
            app:chipBackgroundColor="@android:color/holo_orange_dark"
            app:chipIcon="@drawable/ic_edit_24dp"
            app:chipIconTint="@color/white" />

    </com.google.android.material.chip.ChipGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="18dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_tag_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="6"
            android:hint="@string/name" />

    </LinearLayout>

</LinearLayout>