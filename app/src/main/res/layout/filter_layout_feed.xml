<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:fontFamily="sans-serif-black"
        android:text="Sort By"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/cgFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        app:singleSelection="true"
        android:layout_marginTop="16dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipVotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:checkedIconTint="@color/secondaryColor"
            android:checkable="true"
            app:checkedIcon="@drawable/ic_check_circle"
            app:chipBackgroundColor="@color/filter_chip_bgcolor_selector"
            android:text="votes"
             />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipUpVotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upvotes"
            android:checkable="true"
            app:checkedIcon="@drawable/ic_check_circle"
            app:checkedIconTint="@color/secondaryColor"
            app:chipBackgroundColor="@color/filter_chip_bgcolor_selector"

            />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipLatest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Latest"
            android:checkable="true"
            app:checkedIcon="@drawable/ic_check_circle"
            app:checkedIconTint="@color/secondaryColor"
            app:chipBackgroundColor="@color/filter_chip_bgcolor_selector" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipImpl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Implementations"
            android:checkable="true"
            app:checkedIcon="@drawable/ic_check_circle"
            app:checkedIconTint="@color/secondaryColor"
            app:chipBackgroundColor="@color/filter_chip_bgcolor_selector"
             />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All"
            android:checkable="true"
            app:checkedIcon="@drawable/ic_check_circle"
            app:checkedIconTint="@color/secondaryColor"
            app:chipBackgroundColor="@color/filter_chip_bgcolor_selector"
            android:checked="true"
            />
    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:fontFamily="sans-serif-black"
        android:text="Tags"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/cg_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="16dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_edit2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:editable="true"
            app:chipBackgroundColor="@android:color/holo_orange_dark"
            app:chipIcon="@drawable/ic_edit_24dp"
            app:chipIconTint="@color/white" />

    </com.google.android.material.chip.ChipGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="18dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_tag_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="6"
            android:inputType="textPersonName"
            android:text="Name" />

    </LinearLayout>

</LinearLayout>