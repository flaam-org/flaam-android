<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_main"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.minor_project.flaamandroid.ui.fragments.auth.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_feedFragment"
            app:destination="@id/feedFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.minor_project.flaamandroid.ui.fragments.auth.RegisterFragment"
        android:label="RegisterFragment" />
    <fragment
        android:id="@+id/introFragment"
        android:name="com.minor_project.flaamandroid.ui.fragments.IntroFragment"
        android:label="IntroFragment" >
        <action
            android:id="@+id/action_introFragment_to_signUpFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_introFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.minor_project.flaamandroid.ui.fragments.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_spashFragment_to_introFragment"
            app:destination="@id/introFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/feedFragment"
        android:name="com.minor_project.flaamandroid.feed.FeedFragment"
        android:label="fragment_feed"
        tools:layout="@layout/fragment_feed" >
        <action
            android:id="@+id/action_feedFragment_to_postIdeaFragment"
            app:destination="@id/postIdeaFragment" />
        <action
            android:id="@+id/action_feedFragment_to_userProfileFragment"
            app:destination="@id/userProfileFragment" />
        <action
            android:id="@+id/action_feedFragment_to_postDetailsFragment"
            app:destination="@id/postDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/postIdeaFragment"
        android:name="com.minor_project.flaamandroid.feed.PostIdeaFragment"
        android:label="fragment_post_idea"
        tools:layout="@layout/fragment_post_idea" />
    <action
        android:id="@+id/action_global_feedFragment"
        app:destination="@id/feedFragment"
        app:popUpTo="@id/splashFragment"
        app:popUpToInclusive="true" />
    <fragment
        android:id="@+id/userProfileFragment"
        android:name="com.minor_project.flaamandroid.feed.userprofile.UserProfileFragment"
        android:label="fragment_user_profile"
        tools:layout="@layout/fragment_user_profile" >
        <action
            android:id="@+id/action_userProfileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.minor_project.flaamandroid.feed.userprofile.EditProfileFragment"
        android:label="fragment_edit_profile"
        tools:layout="@layout/fragment_edit_profile" />
    <fragment
        android:id="@+id/postDetailsFragment"
        android:name="com.minor_project.flaamandroid.feed.post.PostDetailsFragment"
        android:label="fragment_post_details"
        tools:layout="@layout/fragment_post_details" />


</navigation>